<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DonasiDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFotoDetail"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/imgFotoDetail"
            app:layout_constraintStart_toStartOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@+id/imgFotoDetail" />

        <TextView
            android:id="@+id/txtYayasanDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Yayasan"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imgFotoDetail"
            app:layout_constraintStart_toStartOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtNameDetail" />

        <TextView
            android:id="@+id/txtDeskripsiDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Deskripsi"
            app:layout_constraintEnd_toEndOf="@+id/imgFotoDetail"
            app:layout_constraintStart_toStartOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtYayasanDetail" />

        <TextView
            android:id="@+id/txtDanaSkrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="20.000.000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtDeskripsiDetail" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="dari"
            app:layout_constraintBottom_toBottomOf="@+id/txtDanaSkrg"
            app:layout_constraintEnd_toStartOf="@+id/txtDanaButuh"
            app:layout_constraintStart_toEndOf="@+id/txtDanaSkrg"
            app:layout_constraintTop_toTopOf="@+id/txtDanaSkrg" />

        <TextView
            android:id="@+id/txtDanaButuh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000.000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtDanaSkrg"
            app:layout_constraintEnd_toEndOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <Button
            android:id="@+id/btnDonasiSekarangDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Donasi Sekarang"
            app:layout_constraintEnd_toEndOf="@+id/imgFotoDetail"
            app:layout_constraintStart_toStartOf="@+id/imgFotoDetail"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>